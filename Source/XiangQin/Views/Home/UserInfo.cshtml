@model XiangQin.Models.BaseUserInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>基本资料</title>
    <style type="text/css">
        body {
            background-color: #F2F2F2;
            color:#555;
        }

        #nav-top {
            text-align: center;
            position: relative;
            background-color: #fff;
            border-bottom: 2px solid #E6338F;
        }

        #nav-back, #nav-title {
            line-height: 50px;
        }

        #nav-back {
            position: absolute;
            top: 0;
            left: 5px;
        }

        #content {
            margin: 5px;
            position: relative;
        }

        .info {
            margin-bottom:10px;
            padding: 5px;
            background-color:#fff;
        }

            .info > table tr {
                border-bottom: 1px #efefef solid;
            }
            .info > table th {
                font-weight: normal;
                color: #808080;
                padding: 10px;
                width: 50%;
                text-align: left;
            }

            .info > table td {
                padding: 5px;
                width: 50%;
                text-align: right;
            }

            .info > table {
                border-collapse: collapse;
                width: 100%;
            }

        .info-left {
            width: 30%;
            float: left;
            overflow: auto;
            zoom: 1;
            padding: 5px;
        }

        img.info-left {
            width: 100%;
        }
        .img-width-all{
            width:100%;
            max-height:200px;

        } .info-title {
             
            font-weight: normal;
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: 2px solid #D63B89;
            width: 6em;
            text-align: center;
        }

        .info-right {
            width: 65%;
            position: absolute;
            top: 0;
            right: 0;
        }

        .user-info {
            background-color: #fff;
            margin-bottom: 5px;
            overflow: auto;
            zoom: 1;
        }

        .user-name {
            font-weight: bold;
            padding: 15px;
        }

        .user-speak {
             
            color: #808080;
            font-size: 12px;
            margin-top: 10px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .btn-link {
            text-decoration: none;
            color: #000;
        }

        .btn {
            display: block;
            line-height: 35px;
            border-radius: 5px;
            text-decoration: none;
            color: #D63B89;
            font-size: 20px;
            margin: 5px;
            text-align: center;
        }

        .btn-pink {
            border: 2px solid #D63B89;
        }

        #friend {
            margin-top: 5px;
        }
        .le_trg {
            display: inline-block;
            margin-left: 10px;
            width: 9px;
            height: 9px;
            border-right: 2px solid #555;
            border-bottom: 2px solid #555;
            transform: rotate(135deg);
            -webkit-transform: rotate(135deg);
            -moz-transform: rotate(135deg);
            -o-transform: rotate(135deg);
            -ms-transform: rotate(135deg);
        }
    </style>
    <script type="text/javascript" src="/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>
    <div id="main">
        <div id="nav-top">
            <span id="nav-back"><i class="le_trg"></i>@Html.ActionLink("返回", "Index", "Home", new { }, new { @class = "btn-link" })</span>
            <span id="nav-title" style="font-family:'microsoft yahei;'"><b>基本资料</b></span>

        </div>
        <div id="content">
            <div class="user-info">
                <div class="info-left">
                    <img src="@Model.uFaceUrl" alt="用户头像" class="img-width-all" />
                </div>
                <div class="info-right">
                    <div class="user-name">@Model.uName</div>
                    <span style="font-family:'Microsoft YaHei';color:#808080;">
                        @(DateTime.Now.Year - Model.uYear-1)岁@(Html.Raw(@Html.Encode(" · ")))@Model.uAddress@Html.Raw(@Html.Encode(" · "))@(Model.uHeight)cm
                    </span>
                    <div class="user-speak">
                        @Model.uSpeak
                    </div>

                </div>
            </div>
            <div class="info">
                <h3 class="info-title">基本资料</h3>
                <table border="0" cellspacing="0">
                    <tr><td></td><td></td></tr>
                    <tr>
                        <th>昵称</th>
                        <td>@Model.uName</td>
                    </tr>
                    <tr>
                        <th>年龄</th>
                        <td>@(DateTime.Now.Year - Model.uYear-1)</td>
                    </tr>
                    <tr>
                        <th>出生日期</th>
                        <td>@Model.uYear/@Model.uMonth/@Model.uDate</td>
                    </tr>
                    <tr>
                        <th>居住地</th>
                        <td>@Model.uAddress</td>
                    </tr>
                    <tr>
                        <th>身高</th>
                        <td>@(Model.uHeight)cm</td>
                    <tr>
                        <th>体重</th>
                        <td>@Model.uWeight</td>
                    </tr>
                    <tr>
                        <th>血型</th>
                        <td>@Model.uBlood</td>
                    <tr>
                        <th>学历</th>
                        <td>@Model.uEdu</td>
                    </tr>
                    <tr>
                        <th>职业</th>
                        <td>@Model.uProfession</td>
                    </tr>
                    <tr>
                        <th>收入</th>
                        <td>@Model.uMoney</td>
                    </tr>
                    <tr>
                        <th>婚姻状况</th>
                        <td>@Model.uMarriage</td>
                    <tr>
                        <th>是否有房</th>
                        <td>@Model.uHouse</td>
                    </tr>
                    <tr>
                        <th>爱好</th>
                        <td>@Model.uHobby</td>
                    </tr>
                </table>
            </div>
            <div class="info" id="info">
                <h3 class="info-title">征友条件</h3>
                <table border="0" cellspacing="0">
                    <tr><td></td><td></td></tr>
                    <tr>
                        <th>常出没地</th>
                        <td>@Model.fAddress</td>
                    </tr>
                    <tr>
                        <th>年龄范围</th>
                        <td>@Model.fAge</td>
                        </tr>
                        <tr>
                            <th>身高范围</th>
                            <td>@Model.fHeight</td>
                        </tr>
                        <tr>
                            <th>最低学历</th>
                            <td>@Model.fEdu</td>
                        </tr>
                        <tr>
                            <th>最低收入</th>
                            <td>@Model.fMoney</td>
                        </tr>
                    </table>
                </div>
                <div class="call">
                    <a href="javascript:;" onclick="$('#erweima').show();" class="btn btn-pink">联系小编</a>
                </div>

            </div>
        <div id="erweima" style="width:100%;position: fixed;height: 100%;z-index: 999999999999;top: 0px;left: 0px;display: none;background: rgba(0, 0, 0, 0.701961);">
            <div style="position: fixed;top: 50%;left: 50%;margin: -218.235294117647px 0px 0px -130px;width: 260px;padding: 20px;box-sizing: border-box;line-height: 26px;background: rgb(255, 255, 255);">
                <div onclick="$('#erweima').hide();" style="position: absolute;right: -15px;top: -15px;width: 30px;height: 30px;background: red;border-radius: 50%;text-align: center;vertical-align: middle;color: white;font-size: 20px;font-weight: bold;line-height: 26px;cursor:pointer">x</div>
                <div style="text-align:center;">
                    <div style="font-size:14px;">微信号（长摁可复制）：</div>
                    @*<div style="font-size:24px;color: #F75000">why254268997</div>*@
                    <div>
                        <img src="/images/ewm.jpg" width="220">
                    </div>
                    <div class="find_tits"><span style="color: #F75000;font-size: 14px;">扫描或长摁上方二维码</span></div>
                </div>
            </div>
        </div>
        </div>
    </body>
</html>
