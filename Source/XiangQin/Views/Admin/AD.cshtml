                                </th>
                                <th>操作</th>
                                <th style="width: 26px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                          @foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.aId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aPicUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aLinkUrl)
        </td>
        <td>
            @Html.ActionLink("编辑", "ADEdit", new { id = item.aId }) |
            @Html.ActionLink("删除", "DeleteAD", new { id = item.aId })
        </td>
    </tr>
}




                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <footer>
