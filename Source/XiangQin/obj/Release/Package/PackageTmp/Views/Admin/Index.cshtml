<body>
    <!--<![endif]-->

    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <ul class="nav pull-right"></ul>
            </div>
        </div>
    </div>


    <div class="container-fluid">

        <div class="row-fluid">
            <div class="dialog span4">
                <div class="block">
                    <div class="block-heading">登录</div>
                    <div class="block-body">
                        @using (@Html.BeginForm("List", "Admin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>账号:</label>

                                @Html.TextBoxFor(a => a.aUserName, new { @class = "span12", @placeholder = "请输入你的管理员账号" })
                                @Html.ValidationMessageFor(a => a.aUserName)
                            </div>
                            <div class="form-group">
                                <label>密码:</label>
                                @Html.PasswordFor(a => a.aPassword, new { @class = "span12", @placeholder = "请输入你的账号密码" })
                                @Html.ValidationMessageFor(a => a.aPassword)
                            </div>
                            <div class="form-group">
                                <input type="submit" value="登录" class="btn btn-primary pull-right" />
                                <div class="clearfix"></div>
                                
                                @Html.ActionLink("修改密码", "EditAdmin", "Admin")|@Html.ActionLink("返回首页", "index", "home")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>








        <!-- Le javascript
